{% extends 'base.html.twig' %}

{% block title %}Salut!{% endblock %}

{% block img %} 
       {# <div> #}
        <img  class="container-fluid" src="https://www.rei.com/content/dam/images/Expert%20Advice/Migration/HeroImages/Content_Team_082817_18850_Snowboards_Choose_lg.jpg" style="padding: 0px; border: solid 5px rgb(0, 200, 255);">
        {# </div> #}
{% endblock %}

{% block body %} 

    <div style="display: flex; flex-wrap: wrap;">

    {% for figure in figures %}

        <div class="card" style="max-width:200px; flex-wrap: wrap; margin: 15px 10px 15px 10px;">
        <a href="{{ path('tricks_show', {'slug': figure.slug}) }}">
            <img class="card-img-top" src="{% for visual in figure.visuals %} {{ visual.url }} {% endfor %}" alt="Card image" style="width:100%">
        </a>
            <div class="card-body" style="height:40px; display:flex; flex-wrap: nowrap; justify-content:space-between; align-items:center;">
                <div style="line-height:20px;">
                    <a href="{{ path('tricks_show', {'slug': figure.slug}) }}">
                        <h4 style="margin:0px; font-size:14px;" class="card-title">{{ figure.title }}</h4>
                    </a>
                </div>
                <div>
                        <a href="{{ path('tricks_edit', {'slug': figure.slug}) }}"><i class="fa fa-pencil" style="font-size:18px"></i></a>
                        <a href="#"><i class="fa fa-trash-o" style="font-size:20px"></i></a>
                </div>                
            </div>
        </div>
   {% endfor %}
   
    </div>

{% endblock %}
