{% extends 'base.html.twig' %}

{% block body %}

	<h1>Inscription sur le site</h1>
	<br>
	<hr>

	{{ form_start(form) }}
	{{ form_row(form.username, {'label': 'Pseudo', 'attr': { 'placeholder': "Votre pseudo"}}) }}
	{{ form_row(form.email, {'label': 'Email', 'attr': { 'placeholder': "nom@exemple.com"}}) }}
	{{ form_row(form.password, {'label': 'Mot de passe', 'attr': { 'placeholder': "Mot de passe"}}) }}
	{{ form_row(form.confirm_password, {'label': 'Confirmation du mot de passe', 'attr': { 'placeholder': "Confirmation du mot de passe"}}) }}
	<button type="submit" class="btn btn-success">Inscription</button>
	{{ form_end(form) }}
	


{% endblock %}