{% extends 'base.html.twig' %}


{% block body %}
<link rel="stylesheet" href="../../css/style.css">

	<h1 class="text-center mt-3">Editer mon profil</h1>
	<br>

<div class="text-center" style="margin: auto; max-width: 350px; border:5px solid #007BFF; padding: 30px; border-radius:10px;">
	
	{% if user.avatar.name is defined %}
		<img class="avatar-md mb-3" src="../../avatars/{{user.avatar.name}}" alt="Avatar de {{ (user.fullName) ? (user.fullName) : (user.username) }}">
	{% else %}
		<img class="avatar-md mb-3" src="../../avatars/avatar-default.png" alt="Avatar de {{ user.username }}">
	{% endif %}
	<hr>

	{{ form_start(form) }}

	<div style="width:250px; margin: auto">
	{{ form_row(form.username, {'attr': {'value': user.username }}) }}
	</div>

	<div style="width:250px; margin: auto">
	{{ form_row(form.email, {'attr': {'value': user.email }}) }}
	</div>
    
	<div style="width:250px; margin: auto">
	{{ form_row(form.firstName, {'attr': {'value': user.firstName }}) }}
	</div>
    
	<div style="width:250px; margin: auto">
	{{ form_row(form.lastName, {'attr': {'value': user.lastName }}) }}
	</div>
    
	<div style="width:250px; margin: auto">
	{{ form_row(form.description, {'attr': {'value': user.description }}) }}
	</div>
    
	<div style="width:250px; margin: auto">
	{{ form_row(form.avatar, {'attr': {'value': user.avatar.name, novalidate: 'novalidate' }}) }}
	</div>

	{# <div style="width:250px; margin: auto">
	{{ form_row(form.password, {'attr': {'value': user.password, novalidate: 'novalidate' }}) }}
	</div>

	<div style="width:250px; margin: auto">
	{{ form_row(form.confirm_password, {'attr': {'value': user.password, novalidate: 'novalidate' }}) }}
	</div> #}

	<button type="submit" class="btn btn-primary">Modifier mon compte</button>
	{{ form_row(form._token) }}
	
</div>

{% endblock %}