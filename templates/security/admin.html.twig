{% extends 'base.html.twig' %}

{% block body %}

	<h1 class="text-center mt-3">Editer mon profil</h1>
    <br>
    <hr>
	<br>

<section class="row col-12" style="height: 300px; background-color: #007bff; border-radius: 10px;">
    <div class="d-flex justify-content-center align-items-center">
        <img class="col-3 responsive-img" style="max-width:150px; max-width:250px;" src="avatars/{{ user.avatar.name }}">
    </div>
    <div class="col-2 d-flex justify-content-center align-items-center" style="font-size: 20px; color: #ffffff;">
        <div>
            <strong>{{ user.firstName }} {{ user.lastName }}</strong>
        </div>
    </div>
    <div class="col-6">
        <div class="text-center mb-0" style="font-size: 30px; color: #ffffff;">
            <i>{{ user.username }}</i>
        </div>
        <div class="text-center small" style="color: #ffffff;">
            {{ user.email }}
        </div>
        <div class="mt-4 text-center" style="background-color: white; max-height: 400px; border-radius: 5px; padding: 15px; overflow: hidden;">
            {{ user.description }}        
        </div>
    </div>
</section>

<section>
    <div>
    
    </div>

</section>

{% endblock %}